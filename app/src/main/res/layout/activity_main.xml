<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_x="62dp"
        android:layout_y="85dp"
        android:text="My Programming Quiz"
        android:textStyle="bold"
        android:textColor="?attr/actionModeSplitBackground"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ayr_txt"
        android:layout_width="268dp"
        android:layout_height="49dp"
        android:layout_x="81dp"
        android:layout_y="200dp"
        android:text="Are you ready to test your skills?"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/start_btn"
        android:layout_width="155dp"
        android:layout_height="63dp"
        android:layout_x="136dp"
        android:layout_y="392dp"
        android:background="@color/colorPrimary"
        android:clickable="false"
        android:cursorVisible="false"
        android:text="Start"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/about_btn"
        android:layout_width="155dp"
        android:layout_height="63dp"
        android:layout_x="136dp"
        android:layout_y="494dp"
        android:background="@android:color/holo_orange_dark"
        android:text="About us"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_x="107dp"
        android:layout_y="280dp"
        android:ems="10"
        android:hint="Enter your name"
        android:inputType="textPersonName" />

</AbsoluteLayout>